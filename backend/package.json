{
  "name": "lomnia",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ts:check": "tsc --noEmit",
    "dev:importer": "tsx watch --clear-screen=false src/importer.ts",
    "add-poi": "tsx src/scripts/poiFormatter.ts",
    "importer": "tsx src/importer.ts",
    "dev:server": "tsx watch --clear-screen=false src/server.ts | pino-pretty",
    "build": "rimraf build && tsc && cp -r src/static build/static && cp -r src/db/migrations build/db/migrations",
    "start": "NODE_ENV=production npm run build && tsx build/src/index.js",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "migration:new": "knex migrate:make -x ts",
    "migration:up": "knex migrate:latest",
    "migration:rollback": "knex migrate:rollback"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cli-progress": "^3.11.6",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.7",
    "knex": "^3.1.0",
    "logform": "^2.7.0",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.2",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.3.0",
    "@trpc/server": "^11.7.1",
    "@types/lodash": "^4.17.20",
    "ansi-colors": "^4.1.3",
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "better-sqlite3": "^12.4.1",
    "camelcase-keys": "^10.0.1",
    "cli-progress": "^3.12.0",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.6.2",
    "front-matter": "^4.0.2",
