    "@types/luxon": "^3.4.2",
    "@types/node": "^22.9.3",
    "drizzle-kit": "^0.28.1",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.3",
