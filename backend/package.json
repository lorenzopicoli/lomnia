    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.21",
    "drizzle-kit": "^0.31.1",
    "knex": "^3.1.0",
    "pg": "^8.16.0",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/static": "^8.2.0",
    "@trpc/server": "^11.1.2",
    "@types/lodash": "^4.17.17",
    "ansi-colors": "^4.1.3",
    "axios": "^1.9.0",
    "better-sqlite3": "^11.10.0",
    "cli-progress": "^3.12.0",
    "csv-parse": "^5.6.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "fastify": "^5.3.3",
    "front-matter": "^4.0.2",
    "geo-tz": "^8.1.4",
    "glob": "^11.0.2",
    "lodash": "^4.17.21",
    "luxon": "^3.6.1",
    "node-ssh": "^13.2.1",
