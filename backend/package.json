{
  "name": "lomnia",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ts:check": "tsc --noEmit",
    "dev:importer": "tsx watch --clear-screen=false src/importer.ts | pino-pretty",
    "importer": "tsx src/importer.ts | pino-pretty",
    "exporter": "tsx src/exporter.ts | pino-pretty",
    "dev:server": "tsx watch --clear-screen=false src/server.ts | pino-pretty",
    "build": "rimraf build && tsc && cp -r src/static build/static && cp -r src/db/migrations build/db/migrations",
    "start": "NODE_ENV=production npm run build && tsx build/src/index.js",
    "lint": "biome lint src/",
    "migration:new": "knex migrate:make -x ts",
    "migration:up": "knex migrate:latest",
    "migration:rollback": "knex migrate:rollback"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/better-sqlite3": "^7.6.13",
