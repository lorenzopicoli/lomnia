{
  "name": "@lomnia/backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ts:check": "npm run openMeteo:generate && tsc --noEmit",
    "dev:enricher:watch": "npm run openMeteo:generate && tsx watch --clear-screen=false src/enricher.ts",
    "dev:enricher": "npm run openMeteo:generate && tsx src/enricher.ts",
    "dev:server": "tsx watch --clear-screen=false src/server.ts | pino-pretty",
    "dev:ingester": "tsx src/listenQueue.ts",
    "dev:ingester:watch": "tsx watch --clear-screen=false src/listenQueue.ts",
    "dev:ingester:file": "tsx src/ingestFile.ts",
    "add-poi": "tsx src/scripts/poiFormatter.ts",
    "schemas:generate": "ts-node src/generateIngestionSchemas.ts",
    "openMeteo:generate": "npx openapi-typescript https://raw.githubusercontent.com/open-meteo/open-meteo/refs/heads/main/openapi_historical_weather_api.yml -o ./src/services/openMeteo/gen/openMeteoOpenApiTypes.d.ts",
    "build": "rimraf build && npm run openMeteo:generate && tsc",
    "server": "NODE_ENV=production npm run migration:up && NODE_ENV=production node build/src/server.js",
    "ingester": "node build/src/listenQueue.js",
    "migrate:serve": "npm run migration:up && node build/src/server.js",
    "enricher": "NODE_ENV=production node build/src/enricher.js",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "migration:new": "knex migrate:make -x ts",
    "migration:up": "knex migrate:latest",
    "migration:rollback": "knex migrate:rollback"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/amqplib": "^0.10.8",
    "@types/lodash": "^4.17.20",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.7",
    "logform": "^2.7.0",
    "pino-pretty": "^13.1.2",
    "rimraf": "^6.1.0",
    "tsx": "^4.20.6"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.3.0",
    "@trpc/server": "^11.7.1",
    "amqplib": "^0.10.9",
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "camelcase-keys": "^10.0.1",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.6.2",
    "front-matter": "^4.0.2",
    "geo-tz": "^8.1.4",
    "glob": "^11.0.3",
    "h3-js": "^4.4.0",
    "i18n-iso-countries": "^7.14.0",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "luxon": "^3.7.2",
    "openapi-fetch": "^0.15.0",
    "openmeteo": "^1.2.2",
    "pg": "^8.16.3",
    "pm2": "^5.4.2",
    "postgres": "^3.4.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "winston": "^3.18.3",
    "wkx": "^0.5.0",
    "zod": "^4.2.1"
  }
}
