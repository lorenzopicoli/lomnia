{
  "name": "lomnia",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ts:check": "tsc --noEmit",
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "rimraf build && tsc && cp -r src/static build/static && cp -r src/db/migrations build/db/migrations",
    "start": "NODE_ENV=production npm run build && tsx build/src/index.js",
    "lint": "biome lint src/",
    "migration:new": "knex migrate:make -x ts",
    "migration:up": "knex migrate:latest",
    "migration:rollback": "knex migrate:rollback"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@types/node": "^20.12.8",
    "drizzle-kit": "^0.20.17",
    "knex": "^3.1.0",
    "pg": "^8.11.5",
    "pino-pretty": "^11.0.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.9.3"
  },
  "dependencies": {
    "@fastify/static": "^7.0.3",
    "better-sqlite3": "^9.6.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "fastify": "^4.26.2",
    "postgres": "^3.4.4",
    "typescript": "^5.4.5",
    "wkx": "^0.5.0"
  }
}
